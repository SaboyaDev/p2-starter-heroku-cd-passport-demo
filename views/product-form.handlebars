<form method="post" action="/api/product" name="product-form">
    <input type="text" name="name" placeholder="Put product name" required />
    <input type="text" name="description" placeholder="Put product description" />
    <input type="number" step="0.01" name="price" placeholder="Put product price" required />
    <button type="submit">Create Product</button>
</form>

